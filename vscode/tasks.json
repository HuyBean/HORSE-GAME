{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++11 build file",
            "command": "g++.exe",
            "args": [
                "-g",
                "-std=c++11",
                "${file}",
                "-pipe",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
